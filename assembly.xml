<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>

	<fileSets>
        <!-- analysis-->
        <fileSet>
            <directory>kunlun-analysis/target</directory>
            <outputDirectory>/kunlun-analysis/lib</outputDirectory>
            <includes>
                <include>*with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>kunlun-analysis/src/main/scripts</directory>
            <outputDirectory>/kunlun-analysis/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>kunlun-logger/src/main/scripts</directory>
            <outputDirectory>/kunlun-analysis/bin</outputDirectory>
            <includes>
                <include>func.sh</include>
                <include>kunlun.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>kunlun-analysis/src/main/resources</directory>
            <outputDirectory>/kunlun-analysis/conf</outputDirectory>
            <includes>
                <include>*.template</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>kunlun-common/src/main/resources</directory>
            <outputDirectory>/kunlun-analysis/conf</outputDirectory>
            <includes>
                <include>*.template</include>
            </includes>
        </fileSet>

        <!-- logger -->
        <fileSet>
            <directory>kunlun-logger/target</directory>
            <outputDirectory>/kunlun-logger/lib</outputDirectory>
            <includes>
                <include>*with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>kunlun-logger/src/main/scripts</directory>
            <outputDirectory>/kunlun-logger/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>kunlun-logger/src/main/resources</directory>
            <outputDirectory>/kunlun-logger/conf</outputDirectory>
            <includes>
                <include>*.template</include>
            </includes>
            <excludes>
                <exclude>*.db</exclude>
                <exclude>*.properties</exclude>
                <exclude>patterns/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>kunlun-common/src/main/resources</directory>
            <outputDirectory>/kunlun-logger/conf</outputDirectory>
            <includes>
                <include>*.template</include>
            </includes>
            <excludes>
                <exclude>*.db</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>kunlun-logger/src/main/resources/patterns</directory>
            <outputDirectory>/kunlun-logger/conf/patterns</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>kunlun-logger/src/main/resources/estmpl</directory>
            <outputDirectory>/kunlun-logger/conf/estmpl</outputDirectory>
        </fileSet>

        <!-- kunlun-web -->
        <fileSet>
            <directory>kunlun-web/target</directory>
            <outputDirectory>/kunlun-web</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>kunlun-web/DB</directory>
            <outputDirectory>/kunlun-web</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
